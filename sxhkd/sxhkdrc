#
# bspwm hotkeys
#

# quit bspwm
super + shift + e
    pkill -x pulseaudio; pkill -x compton; bspc quit

# close window
super + shift + q
	bspc node -c

# toggle floating, fullscreen, or tiled
super + {f,t}
	bspc node focused -t {floating,tiled}

super + Up
    bspc node -f -t {fullscreen, tiled}

# focued node to the east
super + Right 
	bspc node -f east

# focued node to the west
super + Left
	bspc node -f west

# move node to the east monitor and follow focus
super + shift + Right
	bspc node -m east --follow

# move node to the west monitor and follow focus
super + shift + Left
	bspc node -m west --follow

# focus desktop
super + {1-5}
	bspc wm -h off; \
	bspc query -M | xargs -Imon bspc desktop 'mon:^{1-5}' -f; \
	bspc wm -h on; \
	bspc monitor last -f

# move focused window to desktop
super + shift + {1-5}
    focm=`bspc query -M -m focused --names`; \
    if [ $focm == "DisplayPort-0" ]; then cur=2; else cur=1; fi; \
    bspc node -d ^"$cur":^{1-5}

# inc/dec window gap
super + {minus,equal}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

# reset window gap
super + shift + {minus, equal}
    bspc config -d focused window_gap 5

# rotate windows
super + r
    bspc node @/ -R 90

#
# wm independent hotkeys
# applications etc
#

super + Return
