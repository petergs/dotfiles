#
# bspwm hotkeys
#

# quit bspwm
super + shift + e
    pkill -x pulseaudio; pkill -x compton; bspc quit

# close window
super + shift + q
	bspc node -c

# toggle floating, fullscreen, or tiled
super + {f,t}
	bspc node focused -t {fullscreen,tiled}

super + Tab
	bspc node -f {prev,next}.local

#focus desktop
super + {1-9,}
	bspc desktop -f ^{1-9}

# move focused window to desktop
super + shift + {1-9}
	bspc node -d ^{1-9}

#super + {1+5}
#    bspc wm h off; \
#    bspc query -M | xargs -Imon bspc desktop 'mon:^{1-5}' -f; \
#    bspc wm -h on; \
#    bspc monitor last -f

# inc/dec window gap
super + {minus,equal}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

# reset window gap
super + shift + {minus, equal}
    bspc config -d focused window_gap 10

# rotate windows
super + r
    bspc node @/ -R 90

#
# wm independent hotkeys
# applications etc
#

super + Return
    kitty

super + space
    dmenu_run -h 30 -w 600 -x 400
#    dmenu_run -h 30 -w 600 -x 400 -nb '#22313c' -sf '#e5e5e5' -sb '#659063' -nf '#e5e5e5' -fn 'Source Code Pro Semibold-10'

super + s
    xfce4-screenshooter -r
    #import $(date '+%Y%m%d_%H%M%S_')scrot.png 

super + shift + s
    xfce4-screenshooter -r -c
    #import png:- | xclip -selection clipboard -t image/png

XF86MonBrightnessDown
    xbacklight -dec 10 

XF86MonBrightnessUp
    xbacklight -inc 10

XF86AudioRaiseVolume
    pactl set-sink-volume 0 +5%

XF86AudioLowerVolume
    pactl set-sink-volume 0 -5%

XF86AudioMute
    pactl set-sink-mute 0 toggle

XF86LaunchA
    scrot /home/pgs/Pictures/screenshots/'%Y-%m-%d_%T_$wx$h.png'

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd
