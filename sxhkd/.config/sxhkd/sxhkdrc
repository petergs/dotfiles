#
# bspwm hotkeys
#

# quit bspwm
super + shift + e
    pkill -x pulseaudio; pkill -x compton; bspc quit

# close window
super + shift + q
	bspc node -c

# toggle floating, fullscreen, or tiled
super + {f,t}
	bspc node focused -t {fullscreen,tiled}

super + Tab
	bspc node -f {prev,next}.local

#focus desktop or moved focused window to desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

# inc/dec window gap
super + {minus,equal}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

# reset window gap
super + shift + {minus, equal}
    bspc config -d focused window_gap 10

# rotate windows
super + r
    bspc node @/ -R 90

#
# wm independent hotkeys
# applications etc
#

super + Return
	urxvt

super + space
    rofi -show run

super + s
    import $(date '+%Y%m%d_%H%M%S_')scrot.png 

super + shift + s
    import png:- | xclip -selection clipboard -t image/png

XF86MonBrightnessDown
    xbacklight -dec 10 

XF86MonBrightnessUp
    xbacklight -inc 10

XF86AudioRaiseVolume
    pactl set-sink-volume 0 +5%

XF86AudioLowerVolume
    pactl set-sink-volume 0 -5%

XF86AudioMute
    pactl set-sink-mute 0 toggle

XF86LaunchA
    scrot /home/pgs/Pictures/screenshots/'%Y-%m-%d_%T_$wx$h.png'

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

#dmenu_run -nb '#22313c' -sf '#e5e5e5' -sb '#FF081F' -nf '#e5e5e5'
